<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- App Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Period Tracker"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Track your cycle, predict your future"
                android:textSize="14sp"
                android:textColor="@color/gray_600"
                android:gravity="center" />
        </LinearLayout>

        <!-- Period Entry Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/purple_200"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Your Period"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="16dp" />

                <!-- Period Start Date Picker -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Period Start Date"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <DatePicker
                    android:id="@+id/periodStartPicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:spinnersShown="true"
                    android:layout_marginBottom="16dp" />

                <!-- Period End Date Picker -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Period End Date (Optional)"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp" />

                <DatePicker
                    android:id="@+id/periodEndPicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:calendarViewShown="false"
                    android:spinnersShown="true"
                    android:layout_marginBottom="16dp" />

                <!-- Log Period Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/logPeriodButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Log Period"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@color/purple_700"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Prediction Input Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:strokeColor="@color/teal_200"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get Predictions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_700"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select a period start date to calculate your next period and fertile window."
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/predictButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Calculate Predictions"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:cornerRadius="8dp"
                    app:backgroundTint="@color/teal_700"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Predictions Results Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/resultCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@drawable/prediction_result_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Predictions"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@android:color/white"
                    android:padding="12dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/nextPeriodText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Next Period: ---"
                        android:textSize="15sp"
                        android:textColor="@color/purple_700"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/daysUntilText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Days until fertile window: ---"
                        android:textSize="15sp"
                        android:textColor="@color/teal_700"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/fertileDaysText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fertile Window: ---"
                        android:textSize="15sp"
                        android:textColor="@color/red_700" />

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Statistics Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/statisticsCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/stats_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Cycle Statistics"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple_700"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/statisticsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loading statistics..."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp" />

                <TextView
                    android:id="@+id/periodDurationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/gray_600"
                    android:layout_marginTop="12dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- History and Stats Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewHistoryButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="View History &amp; Statistics"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp"
            app:backgroundTint="@color/indigo_700"
            android:layout_marginBottom="16dp" />

        <!-- Info Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/info_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â„¹ï¸ About Your Cycle"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/blue_700"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Average cycle length: 28 days\nâ€¢ Fertile window: Days 12-16 of cycle\nâ€¢ All data is stored locally and encrypted\nâ€¢ No internet required"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="6dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp" />

    </LinearLayout>
</ScrollView>
